{
  "version": 2,
  "framework": "nextjs",
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api", "destination": "/api/index.js" },
    { "source": "/api/hello", "destination": "/api/hello.js" },
    { "source": "/api/v1", "destination": "/app/api/v1/route" },
    { "source": "/api/v1/:path*", "destination": "/app/api/v1/:path*" }
  ]
}
