{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "api/**/*.ts",
    "api/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "ui",
    "dist"
  ]
}
